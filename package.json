{
  "name": "muuri",
  "version": "1.0.0-alpha.0",
  "description": "Responsive, sortable, filterable and draggable layouts",
  "keywords": [
    "grid",
    "layout",
    "bin-packing",
    "filter",
    "sort",
    "drag"
  ],
  "homepage": "https://muuri.dev/",
  "license": "MIT",
  "author": {
    "name": "Niklas Rämö",
    "email": "inramo@gmail.com",
    "url": "https://github.com/niklasramo"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:haltu/muuri.git"
  },
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/muuri.module.js",
  "umd:main": "dist/muuri.umd.js",
  "module": "dist/muuri.module.js",
  "types": "dist/muuri.d.ts",
  "files": [
    "package.json",
    "src",
    "dist",
    "README.md",
    "LICENSE.md",
    "AUTHORS.txt",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "test": "$(npm bin)/gulp test",
    "test-local": "$(npm bin)/gulp test-local",
    "test-browserstack": "$(npm bin)/gulp test-browserstack",
    "bundle": "$(npm bin)/rollup -c",
    "minify-module": "$(npm bin)/terser ./dist/muuri.module.js -o ./dist/muuri.module.min.js --compress --mangle --comments false",
    "minify-umd": "$(npm bin)/terser ./dist/muuri.umd.js -o ./dist/muuri.umd.min.js --compress --mangle --comments false",
    "build": "npm run bundle && npm run minify-module && npm run minify-umd",
    "ts-check": "$(npm bin)/tsc --noEmit",
    "format": "$(npm bin)/prettier --write ./src/**/*.ts",
    "format-tests": "$(npm bin)/prettier --write ./tests/**/*.js",
    "size": "$(npm bin)/gulp size"
  },
  "pre-commit": [
    "format",
    "ts-check"
  ],
  "devDependencies": {
    "@fastify/pre-commit": "2.0.2",
    "@rollup/plugin-typescript": "8.4.0",
    "dotenv": "16.0.1",
    "eventti": "3.0.0",
    "gulp": "4.0.2",
    "gulp-size": "4.0.1",
    "karma": "6.4.0",
    "karma-browserstack-launcher": "1.6.0",
    "karma-chrome-launcher": "3.1.1",
    "karma-qunit": "4.1.2",
    "karma-story-reporter": "0.3.1",
    "mezr": "0.6.2",
    "prettier": "2.7.1",
    "prosthetic-hand": "1.4.0",
    "qunit": "2.19.1",
    "rimraf": "3.0.2",
    "rollup": "2.78.1",
    "rollup-plugin-dts": "4.2.2",
    "terser": "5.15.0",
    "tikki": "2.0.0",
    "typescript": "4.8.2"
  },
  "peerDependencies": {
    "eventti": "^3.0.0",
    "tikki": "^2.0.0"
  }
}
